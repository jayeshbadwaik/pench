% Now, we introduce the required theorem environments and other environments and
% customize them according to our preferences.
% We first define a dummy environment for tracking the counter. All math
% environments would track according to this counter.
\makeatletter
\renewcommand\@endtheorem{\vvv@endmarker\endtrivlist\@endpefalse}
\newcommand\vvv@endmarker{%
  {\nobreak\hfil\penalty50
  \unskip\hskip2em\vadjust{}\nobreak\hfil{$\scriptstyle\blacklozenge$}
  \parfillskip=0pt \finalhyphendemerits=0 \par
  \penalty 10000 \parskip=0pt\noindent}\ignorespaces}
\makeatother

\newtheorem{environment}{Environment}


\theoremstyle{plain}
\newtheorem{theorem}[environment]{Theorem}
\newtheorem{proposition}[environment]{Proposition}
\newtheorem{lemma}[environment]{Lemma}
\newtheorem{corollary}[environment]{Corollary}
\newtheorem{axiom}[environment]{Axiom}
\newtheorem{assumption}[environment]{Assumption}
\newtheorem{definition}[environment]{Definition}
\newtheorem{example}[environment]{Example}
\newtheorem{problem}[environment]{Problem}
\newtheorem{notation}[environment]{Notation}

% Now, we have low profile things like remarks.
\theoremstyle{remark}
\newtheorem{remark}[environment]{Remark}
\newtheorem{note}[environment]{Note}


