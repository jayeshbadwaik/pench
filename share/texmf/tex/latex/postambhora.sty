}

\RequirePackage{xparse}
\RequirePackage{float}
\DeclareFloatingEnvironment[fileext=frm,placement={!ht},name=Equation]{eqfloat}

\captionsetup[eqfloat]{labelfont=bf}

\NewDocumentEnvironment{eqcap}{m}
    {\begin{eqfloat}[H]
    }
    {
    \addtocounter{equation}{-1}
    \caption{#1}
    \end{eqfloat}
    }

\NewDocumentEnvironment{framedeqcap}{m}
    {\begin{eqfloat}[H]
    \begin{mdframed}[roundcorner=5pt,linewidth=1pt]
    }
    {
    \caption{#1}
    \end{mdframed}\end{eqfloat}
    }

